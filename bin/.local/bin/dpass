#! /bin/sh

# shellcheck disable=2046
caller="$(ps -o comm= -p $(ps -o ppid= -p $$))"
prompt="${1:-[$caller]}"
promptfg='#141C21' promptbg='#D12F2C' hidden='#141C21'
font="Iosevka Nerd Font:size=10"

dmenu -p "$prompt" -fn "$font" \
    -nf "$hidden" -nb "$hidden" -sf "$promptfg" -sb "$promptbg" <&-
